@model List<Cizgi_School_Project.Models.TblStudent>
@{
    Layout = null;
}
<h1>Mvc Student Project</h1>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<div class="container">
    <h1>Öğrenci Listesi</h1>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Gönderi</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>@item.StudentId</td>
        <td><img src="@item.Image" style="width: 50px; border-radius:50%;"></td>
        <td>@item.Name</td>
        <td>@item.Surname</td>
        <td><a href="/Student/DeleteStudent/@item.StudentId" class="btn btn-danger">Sil</a></td>
        <td><a href="/Student/DeleteStudent/@item.StudentId" class="btn btn-danger">Güncelle</a></td>

    </tr>
            }



        </table>
        <a href="=/Student/AddStudent/" class="btn btn-primary">Yeni Öğrenci Kaydı</a>
    </div>